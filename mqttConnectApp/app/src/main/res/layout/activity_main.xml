<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="App for controling Home combine with node red."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_light" />

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_yellow"
        app:srcCompat="@drawable/baseline_brightness_1_24" />

    <ImageView
        android:id="@+id/iv_yellow"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_green"
        app:layout_constraintStart_toEndOf="@+id/iv_red"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_brightness_1_24" />

    <ImageView
        android:id="@+id/iv_green"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_yellow"
        app:srcCompat="@drawable/baseline_brightness_1_24" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Red"
        app:layout_constraintEnd_toEndOf="@+id/iv_red"
        app:layout_constraintStart_toStartOf="@+id/iv_red"
        app:layout_constraintTop_toBottomOf="@+id/iv_red" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Yellow"
        app:layout_constraintEnd_toEndOf="@+id/iv_yellow"
        app:layout_constraintStart_toStartOf="@+id/iv_yellow"
        app:layout_constraintTop_toBottomOf="@+id/iv_yellow" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Green"
        app:layout_constraintEnd_toEndOf="@+id/iv_green"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_green"
        app:layout_constraintTop_toBottomOf="@+id/iv_green" />

    <TextView
        android:id="@+id/tv_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="tv_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yellow" />

    <ImageView
        android:id="@+id/iv_dir"
        android:layout_width="205dp"
        android:layout_height="209dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/empty" />

</androidx.constraintlayout.widget.ConstraintLayout>